<section id="explore">
  <h2>Explore our database of career paths</h2>

  <div id="container" class="js-masonry"
       data-masonry-options='{ "columnWidth": 333, "itemSelector": ".item" }'>
    <% @jobs.each do |job| %>
      <% if !job.videos.first.nil? %>
      <div class="item">
        <h3><%= link_to job.title, job %></h3>
        <%= link_to "Show "+job.title+" page", job %><br/>
        <div class="img-cont">
          <iframe width="420" height="315" src="<%= job.videos.first.embed_url %>" frameborder="0" allowfullscreen></iframe>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</section>
