<div id="avatar">
  <img src="/assets/gingerbread.png" alt="">
</div>

<h1><%= @user.profile_name %></h1>

<aside>
  <div id="top"><h2>My Score</h2></div>
  <div id="down">
    <%= @user.points %>
  </div>
</aside>
<section id="personal">
  <h2>
    Personal information
  </h2>
  <%= @user.first_name %>
  <%= @user.last_name %>
  <%= @user.profile_name %>
  <%= @user.email %>
</section>
<section id="badges">
<h2>Your badges</h2>
<% @point_badges.each do |badge| %>
  <%= image tag badge.picture.url(:square) %>
<% end %>
</section>
<% if  @user.role_id == 3 || @user.role_id == 2 %>
  Congratz, you're an admin.
<% end %>
